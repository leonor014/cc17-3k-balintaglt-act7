<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:src="@drawable/breathe_baguio"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"/>




    <!-- Buttons for categories -->
    <Button
        android:id="@+id/kidFriendlyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kid-Friendly Places"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C6110"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/parksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parks"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C6110"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/restaurantsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C6110"
        android:textColor="#F6F3F3"/>

    <Button
        android:id="@+id/buffet_style_foodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buffet Style Food"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C6110"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/coffee_shopsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Shops"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0C6110"
        android:textColor="@color/white"/>


</LinearLayout>
